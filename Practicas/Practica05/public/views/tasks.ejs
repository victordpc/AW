<!DOCTYPE html>
<html lang="es" class="blanco">

<head>
    <title>Gestor de tareas</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="css/principal.css" media="screen">
    <link rel="stylesheet" type="text/css" href="css/imprimir.css" media="print" />
    <link rel="icon" href="img/favicon.jpg" type="image/x-icon" />
</head>


<body>
    <%- include("cabecera") %>
    <div class="contenido">
        <div class="tareas">
            <% taskList.forEach(function(task) { %>
                <% if (!task.done) { %>
                <div class="borde5 tarea activa">
                <% } else { %>
                <div class="borde5 tarea finalizada">
                <% } %>
                <div class="datosTarea">
                    <p class="textoTarea">
                        <%= task.text %>
                    </p>
                    <div class="listaTags">
                        <% task.tags.forEach(function(tag) { %>
                        <p class="tag">
                            <%= tag %>
                        </p>
                        <% }); %>
                    </div>
                </div>
                <a href="/finish/<%=task.id%>"" class="borde5 boton">Marcar Finalizada</a>
            </div>
            <% }); %>
            </div>
            <div class="gestionTareas">
                <form method="POST" action="/addTask">
                    <div class="nuevaTarea">
                        <input type="text" name="texto" class="inputTarea">
                        <input type="submit" class="borde5 botonPlano" value="AÃ±adir">
                    </div>
                </form>
                <div class="eliminarTarea">
                    <form method="POST" action="/eliminarCompletadas" class="eliminarBoton">
                        <input type="submit" class="borde5 botonPlano" value="Eliminar Tareas Completadas">
                    </form>
                </div>
            </div>
        </div>
</body>

</html>