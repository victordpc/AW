<!DOCTYPE html>
<html lang="es" class="blanco">

<head>
    <title>Gestor de tareas</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="../css/principal.css" media="screen">
    <link rel="stylesheet" type="text/css" href="../css/my_profile.css" media="screen">
    <link rel="stylesheet" type="text/css" href="css/imprimir.css" media="print" />
    <link rel="icon" href="img/favicon.jpg" type="image/x-icon" />
    <script src="app.js"></script>
</head>

<body>
    <%- include("header") %>
    <div class="contenedor">
        <div class="PaneltituloPagina">
            <h2>TU PERFIL
                <%=usuario[0].nombre%>
            </h2>
        </div>
        <form id="formularioPerfil" method="POST" name="perfil" action="updateProfile">
            <div class="panelPerfil">
                <!-- <img src="../img/calavera.png" class="calavera"> -->
                <div class="fotoPerfil">
                    <tr>
                        <td><img src="/imagen/<%=usuario[0].email%>" class="imagenPerfil"></td>
                    </tr>
                    <!-- <img src="../img/perfil.png" alt="imagen de perfil" class="imagenPerfil"> -->
                </div>
                <div class="datosPerfil">
                    <p class="nombre">
                        <%=usuario[0].nombre%>
                    </p>
                    <p class="sexo">
                        <%=usuario[0].genero%>
                    </p>
                    <p class="edad">
                        <%= edad %>
                    </p>
                    <p class="puntos">
                        <%=puntos%> puntos
                    </p>

                    <label for="email">E-Mail </label>
                    <input type="text" name="email" id="email" value="<%=usuario[0].email%>" />
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre" value="<%=usuario[0].nombre%>" />
                    <label for="nombre">Nombre</label>
                    <input type="text" name="nombre" id="nombre"  value="<%=usuario[0].apellidos%>"/>
                    <label for="sexo" name="sexo">Sexo</label>
                    <div class="radios">
                        <input type="radio" class="radioB" name="sexo" value="Mujer" id="femenino" <%if (usuario[0].genero=="Femenino") {%>checked<%}%> >Femenino
                        <input type="radio" class="radioB" name="sexo" value="Hombre" id="masculino" <%if (usuario[0].genero=="Masculino") {%>checked<%}%> >Masculino
                        <input type="radio" class="radioB" name="sexo" value="otro" id="otro" <%if (usuario[0].genero=="Otro") {%>checked<%}%> >Otro
                    </div>
                    <label for="fechaNac">Fecha de Nacimiento</label>
                    <input type="date" name="date" id="fechaNac" value="<%=edad%>">
                    <label for="foto">Imagen de perfil</label>
                    <input type="file" name="foto" id="foto" accept="image/x-png,image/gif,image/jpeg" />    
                </div>
                <input type="submit" name="modificarPerfil" id="modificarPerfil" value="Modificar Perfil">
            </div>
        </form>
    </div>
</body>

</html>